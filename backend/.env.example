# Server Configuration
PORT=4000
NODE_ENV=development

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://alovaze_user:alovaze_password@localhost:5432/alovaze_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=alovaze_db
DB_USER=alovaze_user
DB_PASSWORD=alovaze_password
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT_MS=30000

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=alovaze:

# Elasticsearch Configuration
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=
ELASTICSEARCH_INDEX_PREFIX=alovaze_

# Firebase Admin SDK (for real-time features)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n"
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com

# Alternative: Use Service Account File Path
# FIREBASE_SERVICE_ACCOUNT_PATH=./src/config/serviceAccountKey.json

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_chars
JWT_EXPIRY=15m
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_change_this_in_production
JWT_REFRESH_EXPIRY=7d

# AWS S3 Configuration (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=alovaze-uploads

# Stripe Configuration (for payments)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key

# CORS
CORS_ORIGIN=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# Email Service (Nodemailer)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@alovaze.com
EMAIL_FROM_NAME=ALOVAZE Review Platform

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Configuration
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Review Configuration
MIN_REVIEW_LENGTH=50
MAX_REVIEW_LENGTH=5000
REVIEW_EDIT_WINDOW_HOURS=48
MAX_REVIEW_IMAGES=5

# Trust Score Thresholds
MIN_REVIEWS_FOR_TRUST_SCORE=10
VERIFIED_PURCHASE_WEIGHT=1.2
RECENCY_WEIGHT=0.7

# Admin Configuration
ADMIN_EMAIL=admin@alovaze.com

# Analytics
ENABLE_ANALYTICS=true

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log
