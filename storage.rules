rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isValidImage() {
      return request.resource.size < 5 * 1024 * 1024 && // 5MB limit
             request.resource.contentType.matches('image/.*');
    }
    
    function isValidLogo() {
      return request.resource.size < 10 * 1024 * 1024 && // 10MB limit
             request.resource.contentType.matches('image/.*');
    }
    
    // User Profile Images
    match /profiles/{userId}/{allPaths=**} {
      allow read: if true; // Public readable
      allow write: if isAuthenticated() && 
                   isOwner(userId) && 
                   isValidImage();
    }
    
    // Business Logos and Cover Images
    match /businesses/{businessId}/logo/{fileName} {
      allow read: if true; // Public readable
      allow write: if isAuthenticated() && isValidLogo();
    }
    
    match /businesses/{businessId}/cover/{fileName} {
      allow read: if true; // Public readable
      allow write: if isAuthenticated() && isValidLogo();
    }
    
    // Review Images
    match /reviews/{reviewId}/{fileName} {
      allow read: if true; // Public readable
      allow write: if isAuthenticated() && isValidImage();
    }
    
    // Category Icons
    match /categories/{categoryId}/{fileName} {
      allow read: if true; // Public readable
      allow write: if false; // Admin only (handle via backend)
    }
  }
}
